<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
	<StackLayout>
		<Label text="Hello World App" cssClass="title" />
		<StackLayout orientation="horizontal cssClass="message>
			<Label text="Name" />
			<TextField text="{{ name }}" />
		</StackLayout>
        <Label text="{{ message }}" cssClass="message"/>
		<!-- Label cssClass="message" text="{{ !name ? message : 'Hello ' + name }}" / -->
        <Button text="Show Weather" tap="{{ tapAction }}" />
	</StackLayout>
</Page>